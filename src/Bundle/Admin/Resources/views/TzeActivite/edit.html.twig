{% extends '@Admin/base.html.twig' %}

{% form_theme etze_form 'form/fields.html.twig' %}

{% block title %}{{ parent() }} Modification activité d'évenement {% endblock %}

{% set menu_activite        = true %}
{% set menu_activite_create = true %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="callout callout-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="callout callout-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                {{ form_start(etze_form) }}
                <div class="box-header">
                    <h3 class="box-title">Modifier un activité d'évenement</h3>
                </div>

                <div class="box-body">
                    {{ form_row(etze_form.actTitle) }}
                    {{ form_row(etze_form.actDescription) }}
                    {{ form_row(etze_form.actEvent) }}
                    {{ form_row(etze_form.actDebut) }}
                    {{ form_row(etze_form.actFin) }}
                    {{ form_row(etze_form.actImage) }}
                    <div class="form-group">
                        <div class="row">
                            {% if activite.actImage %}
                                <div class="col-md-2 col-lg-2 col-xs-2 blc-image">
                                    <div class="image-container-block">
                                        <img class="img-vignette img-responsive" src="{{ '/event/' ~ activite.actImage }}" />
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="box-footer">
                    <input type="submit" class="btn btn-primary" value="Enregistrer" name="new_activite"/>
                    <a href="{{ path('activite_index') }}"
                       class="btn btn-default pull-left btn-mini-rectif" >
                        Retour à la liste
                    </a>
                </div>
                {{ form_end(etze_form) }}
            </div>
        </div>
    </div>
{% endblock %}