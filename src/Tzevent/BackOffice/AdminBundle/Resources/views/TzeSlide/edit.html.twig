{% extends 'backoffice/base_admin.html.twig' %}

{% form_theme etze_form 'form/fields.html.twig' %}

{% block title %}{{ parent() }} Modification Slide {% endblock %}

{% set menu_slide        = true %}
{% set menu_slide_create = true %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="callout callout-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="callout callout-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                {{ form_start(etze_form) }}
                    <div class="box-header">
                        <h3 class="box-title">Editer un évenement</h3>
                    </div>

                    <div class="box-body">
                        {{ form_row(etze_form.sldEventTitle) }}
                        {{ form_row(etze_form.sldEventDescription) }}
                        {{ form_row(etze_form.sldIntervenant) }}
                        {{ form_row(etze_form.sldLocation) }}
                        {{ form_row(etze_form.sldPlace) }}
                        {{ form_row(etze_form.sldDate) }}
                        {{ form_row(etze_form.sldDateFin) }}
                        {{ form_row(etze_form.sldImageUrl) }}
                        <div class="form-group">
                            <div class="row">
                                {% if slide.sldImageUrl %}
                                    <div class="col-md-2 col-lg-2 col-xs-2 blc-image">
                                        <div class="image-container-block">
                                            <img class="img-vignette img-responsive" src="{{ slide.sldImageUrl }}" />
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" value="Modifier" name="update_slide"/>
                        <a href="{{ path('slide_index') }}"
                           class="btn btn-default pull-left btn-mini-rectif" >
                            Retour à la liste
                        </a>
                    </div>
                {{ form_end(etze_form) }}
            </div>
        </div>
    </div>
{% endblock %}