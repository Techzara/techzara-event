{% extends 'email/layout_email.email.twig' %}

{% block body_html_content %}
    <table cellpadding="0" cellspacing="0" border="0" width="600" class="kl-w480">
        <tr>
            <td height="60"></td>
        </tr>
        <tr>
            <td style="text-align:left; font-size:18px; color:#5b5a5d;">
                <p>{{ 'email.bonjour'|trans }} {{ user.usrNomEntreprise }},</p>
                <p>Voici votre identifiant :</p>
                <p>
                    Login : <strong>{{ data['username'] }}</strong><br>
                    Mot de passe : <strong>{{ data['password'] }}</strong>
                </p>
                <p>{{ 'email.merci'|trans }}</p>
            </td>
        </tr>
    </table>
    <table cellpadding="0" cellspacing="0" border="0" width="600" class="kl-w480">
        <tr>
            <td height="37"></td>
        </tr>
        <tr>
            <td style="text-align:center;"><img src="http://tzevent.fr/images-email/final.jpg" alt="" /></td>
        </tr>
        <tr>
            <td height="100"></td>
        </tr>
    </table>
{% endblock %}